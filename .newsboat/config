refresh-on-startup yes
reload-threads 42
auto-reload yes
reload-time 30
browser qutebrowser
swap-title-and-hints yes
show-keymap-hint no

feedlist-title-format " Newsboat"
articlelist-title-format " %T (%u unread, %t total)"
searchresult-title-format " Search result (%u unread, %t total)"
filebrowser-title-format " %?O?Open File&Save File? - %f"
help-title-format " Help"
selecttag-title-format " Select Tag"
selectfilter-title-format " Select Filter"
itemview-title-format " %T"
urlview-title-format " URLs"
dialogs-title-format " Dialogs"

bind-key SPACE next-unread
bind-key j down
bind-key k up
bind-key g home
bind-key G end
bind-key ^u pageup
bind-key ^d pagedown
bind-key r reload-all
bind-key R reload
bind-key q hard-quit
bind-key h quit filebrowser
bind-key h quit help
bind-key h quit articlelist
bind-key h quit article
bind-key h quit tagselection
bind-key h quit filterselection
bind-key h quit urlview
bind-key h quit dialogs
bind-key l open

macro e set browser "mpv %u" ; open-in-browser ; set browser "qutebrowser %u"
macro E set browser "mpv %u" ; open-in-browser-and-mark-read; set browser "qutebrowser %u"

color background        white    default
color listnormal        color7    default
color listfocus         default  black
color listnormal_unread red      default
color listfocus_unread  red      black
color info              white    color8
color article           white    default
